﻿@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase
@{
    Layout = "Views/Shared/Layout.cshtml";
}

<ul class="pills">
    <li class="active"><a href="/admin/">Admin Home</a></li>
    <li><a href="/admin/settings">Settings</a></li>
    <li><a href="/admin/users">Users</a></li>
    <li><a href="/admin/moderation">Moderation</a></li>
</ul>

<form action="/admin/uservoice" method="POST">
    <fieldset>
        <legend>UserVoice Import</legend>
        <label for="channel">Channel</label>
        <div class="input">
            <input class="xlarge" id="channel" name="channel" size="30" type="text" />
            <span class="help-block">Usually <em>foo</em>.uservoice.com</span>
        </div>
        <br />
        <label for="forumid">Forum ID</label>
        <div class="input">
            <input class="xlarge" id="forumid" name="forumid" size="30" type="text" />
        </div>
        <br />
        <label for="apikey">API Key</label>
        <div class="input">
            <input class="xlarge" id="apikey" name="apikey" size="30" type="text" />
        </div>
        <br />
        
        <div class="input">
            <ul class="inputs-list">
                <li>
                    <label>
                        <input id="trusted" name="trusted" size="30" type="checkbox" value="true" />
                        <span>Is this a trusted API Key?</span>
                    </label>
                </li>
            </ul>
            
            <span class="help-block">Trusted API Keys can retrieve more information</span>
        </div>
        <div class="clearfix"></div>
        <div class="input">
           <button type="submit" class="btn primary">Start Import</button>
        </div>
     </fieldset>
</form>